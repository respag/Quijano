@section ButtonOption {
    <button type="button" id="btnCalcularPersonal" class="btn btn-success btn-sm">
        <i class="fa fa-calculator"></i>&nbsp;Calcular
    </button>
    <button type="button" id="btnCompromisos" class="btn btn-default btn-sm" onclick="location.href = '@string.Concat(Url.Action("Compromisos", "Solicitantes", null), ViewBag.QueryEncripted)?retornarVisible=true&tipoPrestamo=PrestamoPersonal'">
        <i class="fa fa-th-list"></i>&nbsp;Compromisos
    </button>
