<h3><i class="fa fa-calculator"></i> Cálculos del Préstamo Personal</h3>
<form id="formCalculoPersonal" class="form-horizontal" role="form">

    <div class="well well-sm">


        <div class="row">

            <div class="col-xs-6">


                <h4><i class="fa fa-folder-open"></i>&nbsp;Datos del Solicitante</h4>

                <div class="form-group">
                    <label class="col-sm-4 control-label ControlsForms">Nombre Solicitante</label>
                    <div class="col-sm-8">
                        <input type="text" id="txtNombreSolicitante" name="txtNombreSolicitante" class="form-control imput-xs controlUppercase" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label ControlsForms">Identificación</label>
                    <div class="col-sm-8">
                        <input type="text" id="txtIdentificacionSolicitante" name="txtIdentificacionSolicitante" class="form-control imput-xs" readonly />
                    </div>
                </div>
                <hr />

                <h4><i class="fa fa-folder-open"></i>&nbsp;Re-financiamiento</h4>

                <div class="form-group">
                    <label class="col-sm-4 control-label ControlsForms"><input type="checkbox" id="chkRefinanciamiento" />Re financiamiento</label>
                    <div class="col-sm-6">
                        <input type="text" id="txtRefinanciamiento" name="txtRefinanciamiento" class="form-control imput-xs input-Required-BackGround" />
                    </div>
                    <div class="btn-group">
                        <button type="button" id="btnBuscarRefinanciamiento" class="btn btn-info btn-xs" disabled>
                            <i class="fa fa-search"></i>&nbsp;Buscar
                        </button>
                    </div>

                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label ControlsForms">Saldo Proyectado</label>
                    <div class="col-sm-4">
                        <input type="text" id="txtSaldoProyectado" name="txtSaldoProyectado" class="form-control imput-xs" />
                    </div>
                </div>

                <hr />



            </div>

            <div class="col-xs-6">

                <h4><i class="fa fa-folder-open"></i>&nbsp;Ingresos</h4>


                <div class="form-group labelHighlight">

                    <label class="col-sm-4 control-label ControlsForms">Salario Mensual</label>

                    <div class="btn-group col-md-4">
                        <input type="text" id="txtSalarioMensual" name="txtSalarioMensual" class="form-control imput-xs ControlHighlight" readonly />
                    </div>

                </div>

                <div class="form-group">

                    <label class="col-sm-4 control-label ControlsForms">Otros Ingresos</label>

                    <div class="btn-group col-md-4">
                        <input type="text" id="txtOtrosIngresos" name="txtOtrosIngresos" class="form-control imput-xs" readonly />
                    </div>

                </div>

                <hr />
                <h4><i class="fa fa-folder-open"></i>&nbsp;Compromisos</h4>


                <div class="row">

                    <div class="col-xs-6">

                        <h3 class="panel-title">&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-arrow-circle-right"></i>&nbsp;A Cancelar</h3>
                        <br />


                        <div class="form-group">

                            <label class="col-sm-4 control-label ControlsForms">Cantidad</label>

                            <div class="btn-group col-md-8">
                                <input type="text" id="txtCantidadCancelar" name="txtCantidadCancelar" class="form-control imput-xs" />
                            </div>

                        </div>

                        <div class="form-group">

                            <label class="col-sm-4 control-label ControlsForms">Total Saldos</label>

                            <div class="btn-group col-md-8">
                                <input type="text" id="txtTotalSaldosCancelar" name="txtTotalSaldosCancelar" class="form-control imput-xs" readonly />
                            </div>

                        </div>

                    </div>
                    <div class="col-xs-6">


                        <h3 class="panel-title">&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-arrow-circle-right"></i>&nbsp;Que no Cancela</h3>
                        <br />

                        <div class="form-group">

                            <label class="col-sm-4 control-label ControlsForms">Cantidad</label>

                            <div class="btn-group col-md-8">
                                <input type="text" id="txtCantidadNoCancela" name="txtCantidadNoCancela" class="form-control imput-xs" />
                            </div>

                        </div>


                        <div class="form-group">

                            <label class="col-sm-4 control-label ControlsForms">Total Cuotas</label>

                            <div class="btn-group col-md-8">
                                <input type="text" id="txtTotalSaldosNoCancela" name="txtTotalSaldosNoCancela" class="form-control imput-xs" readonly />
                            </div>

                        </div>

                    </div>

                </div>



            </div>

        </div>

    </div>

</form>

