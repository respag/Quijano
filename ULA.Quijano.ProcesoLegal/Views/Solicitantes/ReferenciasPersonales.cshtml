@section ButtonOption {
    <button type="button" class="btn btn-default btn-sm" id="btnClienteCentrico">
        <i class="fa fa-home"></i>&nbsp;&nbsp;Cliente Céntrico
    </button>
    <button type="button" id="btnAgregarReferencia" class="btn btn-success btn-sm"><i class="fa fa-floppy-o"></i>&nbsp;Agregar referencia</button>
    @Html.Partial("~/Views/Solicitantes/_OpcionesGenerales.cshtml")
}

<h3><i class="fa fa-users"></i> Referencias Personales</h3>

<form id="formDeudorDatosGenerales" class="form-horizontal" role="form">

    <div class="well well-sm">
        <div class="row">
            <div class="col-md-6">

                <div class="form-group">
                    <label class="col-sm-4 control-label ControlsForms">Nombre</label>
                    <div class="col-sm-8">
                        <input type="text" id="txtNombre" name="txtNombre" class="form-control imput-xs inputCapitalizeFirstLetter" required maxlength="50" />
                    </div>
                </div>

                <div class="form-group">

                    <label class="col-md-4 control-label ControlsForms">Calle</label>
                    <div class="col-sm-8">
                        <input type="text" id="txtCalle" name="txtCalle" class="form-control imput-xs" required maxlength="50" />
                    </div>
                </div>

                @*Residencial / Edificio*@
                <div class="form-group">

                    <label class="col-md-4 control-label ControlsForms">Residencial / Edificio</label>
                    <div class="col-sm-8">
                        <textarea class="form-control" id="txtResidencialEdificio" rows="3" required maxlength="50"></textarea>
                    </div>
                </div>

                @*No. Casa / No. Apartamento*@
                <div class="form-group">

                    <label class="col-md-4 control-label ControlsForms">No. Casa / No. Apartamento</label>

                    <div class="col-sm-8">
                        <input type="text" id="txtNumeroCasaApartamento" name="txtNumeroCasaApartamento" class="form-control imput-xs" required maxlength="10" />
                    </div>
                </div>

                @*Teléfono Celular*@
                <div class="form-group">
                    <label class="col-sm-4 control-label ControlsForms">Teléfono Celular</label>
                    <div class="col-sm-8 ">
                        <div class="input-group">
                            <span class="input-group-addon">(507)</span>
                            <input type="text" id="txtTelefonoCelular" name="txtTelefonoCelular" class="form-control imput-xs" required maxlength="10" />
                        </div>
                    </div>
                </div>

     
                <div class="form-group">
                    <label class="col-sm-4 control-label ControlsForms">Lugar de Trabajo</label>
                    <div class="col-sm-8">
                        <input type="text" id="txtLugarTrabajo" name="txtLugarTrabajo" class="form-control imput-xs controlUppercase" required maxlength="50" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label ControlsForms"></label>
                    <div class="col-sm-8">
                        <button type="button" id="btnGuardarReferencia" class="btn btn-success btn-sm"><i class="fa fa-floppy-o"></i>&nbsp;Guardar Referencia</button>
                    </div>
                </div>

            </div>

            <div class="col-md-6">

        
                <div class="form-group">

                    <label class="col-sm-4 control-label ControlsForms">País</label>

                    <div class="btn-group col-sm-6">
                        <input type="hidden" id="HiddenCodPais" />
                        <input type="text" id="txtPais" name="txtPais" class="form-control imput-xs" required data-role="btnBuscarPais" readonly />
                    </div>

                    <div class="btn-group">
                        <button type="button" id="btnBuscarPais" class="btn btn-info btn-xs"><i class="fa fa-search"></i>&nbsp;Buscar</button>
                    </div>

                </div>

             
                    <div class="form-group" id="divProvincia">

                        <label class="col-sm-4 control-label ControlsForms">Provincia</label>

                        <div class="btn-group col-sm-6">
                            <input type="hidden" id="HiddenCodProvincia" />
                            <input type="text" id="txtProvincia" name="txtProvincia" class="form-control imput-xs" data-role="btnBuscarProvincia" readonly  />
                        </div>

                        <div class="btn-group">
                            <button type="button" id="btnBuscarProvincia" class="btn btn-info btn-xs" disabled><i class="fa fa-search"></i>&nbsp;Buscar</button>
                        </div>

                    </div>

                    <div class="form-group" id="divDistrito">

                        <label class="col-sm-4 control-label ControlsForms">Distrito</label>

                        <div class="btn-group col-sm-6">
                            <input type="hidden" id="HiddenCodDistrito" />
                            <input type="text" id="txtDistrito" name="txtDistrito" class="form-control imput-xs" readonly data-role="btnBuscarDistrito" />
                        </div>

                        <div class="btn-group">
                            <button type="button" id="btnBuscarDistrito" class="btn btn-info btn-xs" disabled><i class="fa fa-search"></i>&nbsp;Buscar</button>
                        </div>

                    </div>



                <div class="form-group">

                    <label class="col-sm-4 control-label ControlsForms">Relación</label>

                    <div class="btn-group col-sm-6">
                        <input type="hidden" id="hiddenCodParentesco" />
                        <input type="text" id="txtParentesco" name="txtParentesco" class="form-control imput-xs" required data-role="btnBuscarParentesco" readonly />
                    </div>

                    <div class="btn-group">
                        <button type="button" id="btnBuscarParentesco" class="btn btn-info btn-xs"><i class="fa fa-search"></i>&nbsp;Buscar</button>
                    </div>

                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label ControlsForms">Teléfono</label>
                    <div class="col-sm-8">
                        <div class="input-group">
                            <span class="input-group-addon">(507)</span>
                            <input type="text" id="txtTelefono" name="txtTelefono" class="form-control imput-xs" required maxlength="10" />
                        </div>
                    </div>
                </div>

                
            </div>
        </div>
    </div>

    <table id="tableReferenciaPersonal" class="display stripe hover row-border">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Lugar Trabajo</th>
                <th>Teléfono</th>
                <th style="width:25%"></th>
            </tr>
        </thead>
    </table>

    @*Modificar Referencia*@
    <div id="ucBtnModificarReferencia" style="display:none;">
        <div class="btn-group">
            <button type="button" class="btn btn-primary btn-xs" title="Editar Referencia" id="btnEditarReferencia">
                <i class="fa fa-pencil-square-o"></i>&nbsp;&nbsp;Editar
            </button>
            <button type="button" class="btn btn-danger btn-xs" title="Eliminar Referencia" id="btnEliminarReferencia">
                <i class="fa fa-trash-o"></i>&nbsp;&nbsp;Eliminar
            </button>
        </div>
    </div>


</form>

@section Modals{

    <!-- Modal -->

    <div class="modal fade" id="modalAgregarDescripcion" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" style="display: none;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Catalogo</h4>
                </div>
                <div class="modal-body">
                    <form id="formAgregarDescripcion" class="form-horizontal" role="form">

                        <div class="row">

                            <div class="col-md-12">

                                <table id="tableResultadoCatalogo" class="display stripe hover row-border">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Código</th>
                                            <th>Descripción</th>
                                        </tr>
                                    </thead>

                                </table>

                            </div>


                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>

    <div id="ucBtnSeleccionar" style="display:none;">
        <button type="button" id="btnSeleccionar" class="btn btn-default btn-xs">
            <i class="fa fa-check"></i>&nbsp;&nbsp;...
        </button>
    </div>

}

@section scripts{

    @Scripts.Render("~/Scripts/Ultimus-SolicitantesReferencia")

}
