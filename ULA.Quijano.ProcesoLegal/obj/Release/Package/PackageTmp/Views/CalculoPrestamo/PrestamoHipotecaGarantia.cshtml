@section ButtonOption {

    <div class="btn-group">
        @*<button type="button" class="btn btn-default btn-sm" id="btnGuardarDatosSolicitante"><i class="fa fa-floppy-o"></i>&nbsp;Guardar Datos del Préstamo</button>*@
        <button type="button" class="btn btn-default btn-sm " id="btnRegresarCalculoPrestamo"
                onclick="location.href = '@string.Concat(Url.Action("PrestamoHipoteca", "CalculoPrestamo", null), ViewBag.QueryEncripted)?tipoPrestamo=@ViewBag.TipoPrestamo'">
            <i class="fa fa-arrow-circle-left"></i>&nbsp;Regresar a Cálculo del Préstamo
        </button>
        <button type="button" class="btn btn-default btn-sm" id="btnGuardarGarantiaHipoteca"><i class="fa fa-floppy-o"></i>&nbsp;Guardar Garantía</button>
