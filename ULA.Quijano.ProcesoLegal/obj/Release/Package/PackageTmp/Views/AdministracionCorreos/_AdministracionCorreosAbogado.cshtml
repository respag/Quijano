<div>
    <form id="formRegistrarCorreo">
        <div class="row">
            <div class="col-xs-8">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon" id="basic-addon1">Nombre del Cliente:</span>
                    <input type="hidden" id="hiddenTxtNombreCliente" name="hiddenTxtNombreCliente" />
                    <input type="hidden" id="hiddenCodCliente" name="hiddenCodCliente" />
                    <input id="txtNombreCliente" type="text" class="form-control upper-case" name="txtNombreCliente" required />
                    <span class="input-group-btn">
                        <button id="btnAdminCorreoBuscarCliente" class="btn btn-success" type="button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </span>
                </div><!-- /input-group -->
            </div>
            <div class="col-xs-4">
                <div class="input-group padding-bottom input-group-sm">
                    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>&nbsp;&nbsp;Correo Destino:</span>
                    <input id="txtCorreoOrigen" type="email" class="form-control" aria-describedby="basic-addon1" name="txtCorreoOrigen" required />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-8">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>&nbsp;&nbsp;CC:</span>
                    <input id="txtCC" type="text" class="form-control" name="txtCC" />
                </div>
            </div>
        </div>

        @*----- PopUp Buscar Cliente ------*@
        @Html.Partial("~/Views/AdministracionCorreos/_AdminCorreoBuscarCliente.cshtml")

        <div class="row">
            <div class="col-xs-6">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1"><i class="fa fa-ellipsis-h"></i>&nbsp;&nbsp;Asunto:</span>
                    <input id="txtAsunto" type="text" class="form-control input-sm" aria-describedby="basic-addon1" name="txtAsunto" required />
                </div>
            </div>
            <div class="col-xs-2">
                @if (ViewBag.Step == "RespondeCorreo")
                {
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon2">Devuelta:</span>
                        <div class="form-control text-center">
                            <input id="chkbDevuelta" name="chkbDevuelta" type="checkbox" value="2" />
                        </div>
                    </div>
                }
            </div>
            <div class="col-xs-2">
                @if (ViewBag.Step == "RespondeCorreo")
                {
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon2">Solicitar Servicio Legal:</span>
                        <div class="form-control text-center">
                            <input id="chkbServicioLegal" name="chkbServicioLegal" type="checkbox" value="2" />
                        </div>
                    </div>
                }
            </div>
        </div>

        <br />

        <div class="input-group padding-bottom">
            <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>&nbsp;&nbsp;Contenido:</span>
            <textarea id="txtaContenido" class="form-control" style="width:800px; height:120px" rows="5" name="txtaContenido" required></textarea>
        </div>

        @if (ViewBag.Step == "RespondeCorreo")
        {
            <div class="input-group padding-bottom">
                <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-send" aria-hidden="true"></span>&nbsp;&nbsp;Respuesta:</span>
                <textarea id="txtaRespuesta" class="form-control" style="width:800px; height:120px" rows="5" name="txtaRespuesta" required></textarea>
            </div>
        }
        
        @*<div class="input-group" id="upload" enctype="multipart/form-data">
            <span class="input-group-btn">
                <button id="btnAdjuntar" name="btnAdjuntar" class="btn btn-success" type="button"><span class="glyphicon glyphicon-circle-arrow-up" aria-hidden="true"></span>&nbsp;&nbsp;Adjunto:</button>
            </span>
            <input id="txtFileUpload" type="file" name="files[]" class="form-control " name="txtFileUpload" aria-describedby="basic-addon1" data-url="server/php/" multiple />
        </div>*@

    </form>

    <iframe id="adjuntos" src="/AttachmentPage/?" width="100%" height="250px" style="border: hidden;"></iframe>

    <iframe id="adjuntosRO" src="/AttachmentPage/?" width="100%" height="200px" style="border: hidden;"></iframe>

</div>


