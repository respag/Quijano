@{
    Layout = null;
}

<br />
<br />

<form id="formInstNavDatosFactEntrega" style="font-size: 12px !important;">
    <div class="row">
        @*<div>
                <button id="btnGuardarDatosFacturacionNav" type="button" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-floppy-save" aria-hidden="true"></span>&nbsp;&nbsp;Guardar datos</button>
            </div>*@
        <div class="col-xs-2" style="padding-right: 2px;">
            <div class=" input-group padding-bottom form-inline input-group-sm">
                <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>&nbsp;&nbsp;Cliente:</span>
                <input id="txtInstNavCodCliente" name="txtInstNavCodCliente" type="text" class="form-control " aria-describedby="basic-addon1" />
            </div>
        </div>
        <div class="col-xs-10" style="padding-left: 2px;">
            <input id="txtInstNavCliente" name="txtInstNavCliente" type="text" class="form-control input-sm" aria-describedby="basic-addon1" required />
        </div>
    </div>

    <div class=" input-group padding-bottom form-inline input-group-sm">
        <span class="input-group-addon" id="basic-addon1">Tipo Fact. As:</span>
        <select id="ddlInstNavTipoFact" name="ddlInstNavTipoFact" class="form-control" data-original-title="" title="" aria-label="..." required>
            <option value=""></option>
        </select>
    </div>

    <p>
        <div class="row">
            <div class="col-md-3">
                <label>Forma de pago</label>&nbsp;
                <input id="rbInstNavFormaPagoCre" type="radio" name="rbInstNavFormaPago" value="cre" required />Credito&nbsp;&nbsp;&nbsp;
                <input id="rbInstNavFormaPagoCon" type="radio" name="rbInstNavFormaPago" value="con" required />Contado
            </div>
            <div class="col-md-2">
                <label>Proforma</label>&nbsp;
                <input id="rbInstNavProformaSi" type="radio" name="rbInstNavProforma" value="1" required />Si&nbsp;&nbsp;&nbsp;
                <input id="rbInstNavProformaNo" type="radio" name="rbInstNavProforma" value="0" required />No
            </div>
            <div class="col-md-4">
                <table>
                    <tr>
                        <td><label>Moneda</label>&nbsp;</td>
                        <td>
                            <select class="form-control" id="ddlInstNavMoneda" style="width: 150px;" required>
                                <option></option>
                                <option value="7">EURO</option>
                                <option value="0">DOLLAR</option>
                                <option value="2">LIBRAS</option>
                                <option value="100">YEN</option>
                                <option value="6">FRANCOS SUIZOS</option>
                            </select>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-3">
                <label>Tipo de Factura</label>&nbsp;
                <input id="rbInstNavTipoFacturaGlo" type="radio" name="rbInstNavTipoFactura" value="glo" required />Global&nbsp;&nbsp;&nbsp;
                <input id="rbInstNavTipoFacturaDet" type="radio" name="rbInstNavTipoFactura" value="det" required />Detallada
            </div>
        </div>
    </p>

    <div class="row">
        <div class="col-xs-6">
            <div class=" input-group padding-bottom form-inline input-group-sm">
                <span class="input-group-addon" id="basic-addon1">Referencia:</span>
                <input id="txtInstNavReferencia" name="txtInstNavReferencia" type="text" class="form-control" aria-describedby="basic-addon1" required />
            </div>
        </div>
        <div class="col-xs-6">
            <div class=" input-group padding-bottom form-inline input-group-sm">
                <span class="input-group-addon" id="basic-addon1">Nombre de la factura:</span>
                <input id="txtInstNavNombreFactura" name="txtInstNavNombreFactura" type="text" class="form-control" aria-describedby="basic-addon1" required />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-10">
            <div class=" input-group padding-bottom form-inline input-group-sm">
                <span class="input-group-addon" id="basic-addon1">Dirección de Factura:</span>
                <textarea id="txtInstNavDireccionFactura" name="txtInstNavDireccionFactura" class="form-control" style="height: 70px;" rows="3" required></textarea>
            </div>
        </div>
        <div class="col-xs-2">
            <button id="btnInstNavConsultar" type="button" class="btn btn-primary btn-sm">Libreta de Direcciones</button>
        </div>
    </div>

    <label><i class="fa fa-check-square-o"></i>&nbsp;&nbsp;Leyenda de Factura</label>
    <textarea id="txtInstNavLeyendaFactura" name="txtInstNavLeyendaFactura" class="form-control" rows="3"></textarea>

    <br />

    <div class="row">
        <div class="col-xs-6">
            <label>Responsable de Notificar Cliente</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input id="rbInstNavRespNotiAbog" type="radio" name="rbInstNavRespNoti" value="abo" required />Abogado&nbsp;&nbsp;&nbsp;
            <input id="rbInstNavRespNotiAsistLeg" type="radio" name="rbInstNavRespNoti" value="asi" required />Gestor
        </div>
        <div class="col-xs-6">
            <label>Forma de Envío del Paquete</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            @*<input id="chkbInstNavCurrier" type="checkbox" name="currier" value="1" onchange="if ($('#chkbInstNavCurrier').is(':checked') || $('#chkbInstNavMensajeria').is(':checked')) $('#divInstNavDireccionEnvio').show(500); else $('#divInstNavDireccionEnvio').hide(300); if ($('#chkbInstNavCurrier').is(':checked')) $('#divNavNumeroGuia').show(500); else $('#divNavNumeroGuia').hide(300);" />Currier&nbsp;&nbsp;&nbsp;*@
            <input id="chkInstNavCurrier" type="checkbox" name="chkInstNavCurrier" />Courier&nbsp;&nbsp;&nbsp;
            <input id="chkInstNavEmail" type="checkbox" name="chkInstNavEmail" />E-mail&nbsp;&nbsp;&nbsp;
            <input id="chkInstNavPersonal" type="checkbox" name="chkInstNavPersonal" />Recepción&nbsp;&nbsp;&nbsp;
            @*<input id="chkbInstNavMensajeria" type="checkbox" name="personal" value="1" onchange="if ($('#chkbInstNavMensajeria').is(':checked')) $('#divNavNumeroSolicitud').show(500); else $('#divNavNumeroSolicitud').hide(300);" />Mensajería*@
            <input id="chkInstNavMensajeria" type="checkbox" name="chkInstNavMensajeria" />Mensajería
        </div>
    </div>
    <br />
    <div id="divInstNavNumeroSolicitud" style="display:none">
        <div class="input-group padding-bottom form-inline input-group-sm">
            <label><i class="fa fa-check-square-o"></i>&nbsp;&nbsp;Numero de Solicitud:</label>
            <input id="txtInstNavNroSolicitud" name="txtInstNavNroSolicitud" type="text" class="form-control" aria-describedby="basic-addon1" />
        </div>
    </div>
    <div id="divInstNavNumeroGuia" style="display:none">
        <div class="input-group padding-bottom form-inline input-group-sm">
            <label><i class="fa fa-check-square-o"></i>&nbsp;&nbsp;Numero de Guia:</label>
            <input id="txtInstNavNroGuia" name="txtInstNavNroGuia" type="text" class="form-control" aria-describedby="basic-addon1" />
        </div>
    </div>
    <div id="divInstNavDireccionEnvio" style="display:none">
        <label><i class="fa fa-check-square-o"></i>&nbsp;&nbsp;Dirección de envío:</label>
        <textarea id="txtInstNavDireccionEnvio" name="txtInstNavDireccionEnvio" class="form-control" rows="3"></textarea>
    </div>


</form>